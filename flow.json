{

  flow : {
    build : {
      boot : 'SnowApp'
    }
  },

  project : {

    name : 'snow',
    version : '1.0.0',
    author : 'snowkit',

    build : {
      files : {
        boot : { path:'flowtemplates/boot/SnowApp.hx => haxe/SnowApp.hx', template:['snow','project'] },
      }
    }
